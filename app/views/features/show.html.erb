<%@page_title="Show"%>
<b><%=link_to("<< Back to features list",features_path)%></b>
<h1>Show Feature</h1>
<%= link_to 'Edit', edit_feature_path(@feature.id) %> |
<%= link_to('Delete', delete_feature_path(@feature.id))%>
<br/><br/> 
<table class="table">
	<tr>
		<th>ID</th>
		<td><%=@feature.id%></td>
	</tr>
	<tr>
		<th>Name</th>
		<td><%=@feature.name%></td>
	</tr>
	<tr>
		<th>Albums containing<br/> this feature</th>
		<td>
            <%if @feature.albums %>
	            <ul>
	                <% @feature.albums.each do |album| %>
		                <li>
			                <%= link_to(album.title,album_path(album.id))%><b> for</b>
		                    <%= link_to(album.artist.name,artist_path(album.artist.id)) if
		                      album.artist %>
                        </li> 
	                <% end %>
                </ul>                  
            <% end %>
        </td>        
	</tr>
	<tr>
		<th>Created at</th>
		<td><%=@feature.created_at%></td>
	</tr>
	<tr>
		<th>Updated at</th>
		<td><%=@feature.updated_at%></td>
	</tr>
</table>

