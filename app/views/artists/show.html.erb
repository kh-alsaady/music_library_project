<%@page_title="Show"%>
<b><%=link_to("<< Back to artists list",artists_path)%></b>
<h1>Show artist</h1>
<%= link_to 'Edit', edit_artist_path(@artist.id) %> |
<%= link_to('Delete', delete_artist_path(@artist.id))%>
<br/><br/> 
<table class="table">
	<tr>
		<th>ID</th>
		<td><%=@artist.id%></td>
	</tr>
	<tr>
		<th>Name</th>
		<td><%=@artist.name%></td>
	</tr>
	<tr>
		<th>Active Year</th>
		<td><%=@artist.active_year%></td>
	</tr>
	<tr>
		<th>Biography</th>
		<td><%=@artist.biography%></td>
	</tr>
	<tr>
		<th>Albums</th>
		<td>
                <%if @artist.albums %>
                  <ul>
                    <% @artist.albums.each do |album| %>
                      <li><%= link_to(album.title,album_path(album.id))%></li>
                    <% end %>
                  </ul>
                <% end %>
        </td>         
	</tr>
	<tr>
		<th>Created at</th>
		<td><%=@artist.created_at%></td>
	</tr>
	<tr>
		<th>Updated at</th>
		<td><%=@artist.updated_at%></td>
	</tr>
</table>

