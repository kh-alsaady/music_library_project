<%@page_title="Show"%>
<b><%=link_to("<< Back to albums list",albums_path)%></b>
<h1>Show Album</h1>
<%= link_to 'Edit', edit_album_path(@album.id) %> |
<%= link_to('Delete', delete_album_path(@album.id))%>
<br/><br/> 
<table class="table">
	<tr>
		<th>ID</th>
		<td><%=@album.id%></td>
	</tr>
	<tr>
		<th>Title</th>
		<td><%=@album.title%></td>
	</tr>
	<tr>
		<th>Release date</th>
		<td><%=@album.release_date%></td>
	</tr>
	<tr>
		<th>Price</th>
		<td><%=@album.price%></td>
	</tr>	
	<tr>
		<th>Genre</th>
		<td><%=@album.genre%></td>
	</tr>
	<tr>
		<th>Artist</th>
	    <td>
		    <%= link_to(@album.artist.name,artist_path(@album.artist.id)) if 
			    @album.artist %>
	    </td>
	</tr>
	<tr>
		<th>Features</th>
		<% if @album.features.any? %>
			<td>
				<ul>
				<% @album.features.each do |f| %>
					<li><%=link_to(f.name,feature_path(f.id))%></li>
				<% end -%>
				</ul>
			</td>
	</tr>
		<% else %>
			<td></td>
	</tr>
		<% end %>			
	<tr>
		<th>Created at</th>
		<td><%=@album.created_at%></td>
	</tr>
	<tr>
		<th>Updated at</th>
		<td><%=@album.updated_at%></td>
	</tr>
</table>